<head>
  <meta charset='<%= Rails.application.config.encoding %>' />
  <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
  <title><%= browser_title(yield(:title)) %></title>
  <%= raw(%(<meta name="description" content="#{@meta.meta_description}" />)) if @meta.meta_description.present? -%>
  <%= raw(%(<meta name="keywords" content="#{@meta.meta_keywords}">)) if @meta.meta_keywords.present? -%>
  <%= raw(%(<link rel="canonical" content="#{@canonical}" />)) if @canonical.present? -%>
  <%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>
  <%= yield :meta %>

  <%= stylesheet_link_tag "application", "formatting", "theme" %>
  <%= stylesheet_link_tag "main" if controller_name == "pages" %>
  <%= stylesheet_link_tag "welcome" if controller_name == "static" %>
  <%= stylesheet_link_tag "shop" if ["shops", "categories", "subcategories"].include?(controller_name) %>
  <%= stylesheet_link_tag "service" if ["services", "companies"].include?(controller_name) %>  
  <%= stylesheet_link_tag "box" %>
  <%= stylesheet_link_tag "banner" %>
  <%= yield :stylesheets %>

  <%= render '/refinery/google_analytics' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'modernizr-min' %>
  <!--%= javascript_include_tag 'aform' %-->  
  <!--%= javascript_include_tag 'slider' %-->  
  <%= javascript_include_tag 'box' %>
  <%= javascript_include_tag 'banner' %>
  <%= javascript_include_tag 'static' %>
  <%= javascript_include_tag "shop" if ["shops"].include?(controller_name) %>  
  <%= javascript_include_tag "company" if ["shops"].include?(controller_name) %>  
  <script src="http://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU" type="text/javascript"></script>
  <%= javascript_include_tag 'map' %>  
</head>
