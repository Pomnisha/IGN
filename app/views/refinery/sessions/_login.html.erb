<div id="user_login_box">
  <%= form_for("refinery_user", :url => refinery.refinery_user_session_path, :html => {:id => "sign_in"}, :remote => true, :format => :json) do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit 'Sign in' %>
    <%= link_to "Forgot your password?", refinery.new_refinery_user_password_path("refinery_user") %>
  <% end %>
</div>