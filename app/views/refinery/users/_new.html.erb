<%# content_for :header, t('there_are_no_users', :scope => 'refinery.welcome') %>
<div id = "reg_f">
<% content_for :header, "Добро пожаловать в наш прекрастный каталог магазинов. Зарегистрируйтесь, пожалуйста." %>

<%= form_for :user, :url => refinery.refinery_user_registration_path do |f| -%>

<div class='field'>
    <%= f.label "Имя пользователя:" %>
    <%= f.text_field :username, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label "Элетронная почта:" %>
    <%= f.text_field :email, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label "Пароль:" %>
    <%= f.password_field :password, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label "Подтверждение пароля:" %>
    <%= f.password_field :password_confirmation, :class => 'larger widest' %>
  </div>

  <div class='clearfix'>
    <div class='field forgot_password'>
      <%= link_to "Я уже зарегистророванный позьлователь", refinery.new_refinery_user_session_path %>
    </div>  
  </div>
  <%= render '/refinery/admin/form_actions', :f => f,
             :submit_continue => false,
#             :submit_button_text => t('Зарегистрироваться', :scope => 'refinery.users.new'),
             :submit_button_text => 'Зарегистрироваться',
             :hide_delete => true,
             :hide_cancel => true %>
<% end -%>
</div>