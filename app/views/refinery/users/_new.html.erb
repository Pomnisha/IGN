
<div id="reg">
  <header style="width:390px">
      <h1>Форма регистрации</h1>
  </header>
  
<%= form_for :user, :html => {:id => 'regform'}, :url => refinery.refinery_user_registration_path do |f| -%>

  <%= render '/refinery/admin/error_messages', :object => @user, :include_object_name => true %>

  <div class='field'>
    <%= f.label "Имя пользователя:" %>
    <%= f.text_field :username %>
  </div>
  <div class='field'>
    <%= f.label "Элетронная почта:" %>
    <%= f.email_field :email %>
  </div>
  <div class='field'>
    <%= f.label "Пароль:" %>
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label "Подтверждение пароля:" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :submit_button_id => "reg_submit",
             :submit_continue => false,
             :submit_button_text => 'Зарегистрироваться',
             :hide_delete => true,
             :hide_cancel => true %>
<% end -%>
</div>