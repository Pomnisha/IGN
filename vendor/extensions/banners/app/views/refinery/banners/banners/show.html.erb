<% content_for :body_content_title do %>
  <%= @banner.banner_type %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @banner.banner_type %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @banner.url %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%=raw @banner.image %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="banners">
      <% @banners.each do |banner| %>
        <li>
          <%= link_to banner.banner_type, refinery.banners_banner_path(banner) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
