<% @category.shops.each do |s| %>
  <div class="categoryes">
    <div class="icon_category">          
      <img src="../images/icon_category.png" width="155" height="98" />
    </div>
    <div class="category_text">
      <h2><%= s.short_description %></h2>
      <a href="#"><%= s.url %></a>
      <%= s.description %>
      <div class="line"></div>
      Телефон: <%= s.phone %>   e-mail: <%= s.e_mail  %>
    </div>
  </div>
<% end %>
