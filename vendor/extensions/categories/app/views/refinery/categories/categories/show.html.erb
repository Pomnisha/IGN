<% i = 0 %>
<% @category.shops.each do |s| %>
<% i = i + 1 %>
<% if i == 4 then%>
  <%= render "refinery/slider2" %>
<% end %>

  <div class="categoryes">
    <div class="icon_category">          
      <a href="<%= refinery.shops_shop_url(s.id)%>">
      <% unless s.logo.nil? -%>
        <%= image_fu s.logo, '155x98' %>
      <% else -%>
        <img class="current_picked_image" src="" alt="" style='display: none' />
      <% end -%>
      </a>
    </div>
    <div class="category_text">
      <h2><a href="<%= refinery.shops_shop_url(s.id)%>"><%= s.name.html_safe %></a></h2>
      <a class="out_link" href="<%= s.url %>"><%= s.url %></a>
      <%= s.short_description.html_safe %>
      <div class="line"></div>
      Телефон: <%= s.phone %>   e-mail: <%= s.e_mail  %>
    </div>
  </div>
<% end %>
