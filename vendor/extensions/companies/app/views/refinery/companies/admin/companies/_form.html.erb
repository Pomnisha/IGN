<%= form_for [refinery, :companies_admin, @company] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @company,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name  -%>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:short_description, :description, :working_time].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/companies/company", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:short_description, :description, :working_time].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :service_id -%>
    <%= f.select :service_id , Refinery::Services::Service.all.collect {|p| [p.name, p.id ]} -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>
  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone  -%>
  </div>
  

  <div class='field'>
    <%= f.label :e_mail -%>
    <%= f.text_field :e_mail  -%>
  </div>
  
  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @company.logo,
               :toggle_image_display => false %>
  </div>
  
  <div class='field'>
    <%= f.label :map_latitude -%>
    <%= f.text_field :map_latitude  -%>
  </div>
  
  <div class='field'>
    <%= f.label :map_longtitude -%>
    <%= f.text_field :map_longtitude  -%>
  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address  -%>
  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.companies.admin.companies.company'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @company.url) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
