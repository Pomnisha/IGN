<div id="categoryes_body">
<% i = 0 %>  
<%- @companies.each do |c| %>
<% i = i + 1 %>
<% if i == 4 then%>
  <%= render "refinery/slider2" %>
<% end %>
<div class="categoryes">
    <div class="icon_category">        
    
    <a href="<%= refinery.companies_company_path(c.id)%>">
      <% unless c.logo.nil? -%>
        <%= image_fu c.logo, '73x88' %>
      <% else -%>
        <% if c.img_uid %>
          <%= image_tag c.img.thumb('155x98').url %>
        <% else -%>
          <%= image_tag("noimage.jpg") %>
        <% end %>
      <% end -%>
    </a>
  </div>
    <div class="category_text">
      <h2>
        <a href="<%= refinery.companies_company_url(c.id) %>">
          <%= c.name.html_safe + "-" + c.short_description.html_safe %>
        </a>
      </h2>
      <p><%= truncate c.description.html_safe, :length => 140 %></p>
    </div>
  </div>
<%- end %>
</div>

<%= will_paginate @companies, previous_label: h("<-"), next_label: h("->")  %>