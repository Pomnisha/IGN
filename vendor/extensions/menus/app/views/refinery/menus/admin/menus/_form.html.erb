<%= form_for [refinery, :menus_admin, @menu] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @menu,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :menu_type -%>
    <%= f.select :menu_type, (1..8).collect {|n| ["Тип #{n}", n]}   -%>

  </div>
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name  -%>

  </div>  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.menus.admin.menus.menu'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @menu.menu_type) %>
<% end -%>
