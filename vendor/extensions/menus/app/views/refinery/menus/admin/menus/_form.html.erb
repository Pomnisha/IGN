<%= form_for [refinery, :menus_admin, @menu] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @menu,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :type -%>
    <%= f.text_field :type, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.menus.admin.menus.menu'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @menu.type) %>
<% end -%>
