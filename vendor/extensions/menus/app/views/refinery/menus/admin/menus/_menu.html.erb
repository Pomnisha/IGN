<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(menu) -%>">
  <span class='title'>
    <%= menu.type %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.menus_menu_path(menu),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_menus_admin_menu_path(menu),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.menus_admin_menu_path(menu),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => menu.type),
        :method => :delete %>
  </span>
</li>