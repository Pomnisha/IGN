<% content_for :body_content_title do %>
  <%= @menu.type %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @menu.type %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @menu.url %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="menus">
      <% @menus.each do |menu| %>
        <li>
          <%= link_to menu.type, refinery.menus_menu_path(menu) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
