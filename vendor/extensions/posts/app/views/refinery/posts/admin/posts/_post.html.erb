<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(post) -%>">
  <span class='title'>
    <%= post. %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.posts_post_path(post),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_posts_admin_post_path(post),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.posts_admin_post_path(post),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => post.),
        :method => :delete %>
  </span>
</li>