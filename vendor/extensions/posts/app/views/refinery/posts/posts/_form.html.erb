<h1>Добавление комментария</h1>
 <%= form_for [refinery, :posts, @post], :html => {:id => "post"} do |f| -%>
<div id="form_top"> </div>
  <%= render '/refinery/admin/error_messages',
              :object => @post,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :body, "Текст комментария" -%>
    <%= f.text_area :body, :class => "full"  -%>
  </div>
  
  <div class='field'>
    <%= f.label :topic_id, "Тема" -%>
    <%= f.select :topic_id, Refinery::Topics::Topic.all.collect {|p| [ p.name, p.id ] }, :class => "cat"  -%>
  </div>
  
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.posts.admin.posts.post'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') %>
<% end -%>
<div id="form_bottom"> </div>
  <%= render "refinery/slider2" %>