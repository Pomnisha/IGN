<% content_for :body_content_left do %>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @post.body %>
    </p>
  </section>
  <section>
    <h1>Id</h1>
    <p>
      <%=raw @post.id %>
    </p>
  </section>
  <section>
    <h1>Topic</h1>
    <p>
      <%=raw @post.topic_id %>
    </p>
  </section>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @post.user_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="posts">
      <% @posts.each do |post| %>
        <li>
          <%= link_to post.title, refinery.posts_post_path(post) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
