<div id="content_banners">
  <%- Refinery::Services::Service.all.each do |s| %>
    <div class="banner_service"><%= image_fu s.logo, '204x93' %></div>
  <%- end %>
</div>
<div id="categoryes_body">
  <div id="categoryes_top"></div>
<%- Refinery::Companies::Company.last(3).each do |c| %>
  <div class="categoryes">
    <div class="icon_category">          
      <%= image_fu c.logo, '73x88#' unless c.logo.nil?%>
    </div>
    <div class="category_text">
      <h2><%= link_to "#{c.name.html_safe} - #{c.short_description.html_safe}", refinery.companies_company_path(c.id)  %></h2>
      <%= c.description.html_safe %>        
    </div>
  </div>
<%- end %>
</div>


