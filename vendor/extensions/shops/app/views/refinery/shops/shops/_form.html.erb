<%= form_for [refinery, :shops, @shop] do |f| -%>
  <%= render '/refinery/shops/error_messages',
              :object => @shop,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url  -%>
  </div>
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name  -%>
  </div>
  <div class='field'>
    <%= f.label :short_description -%>
    <%= f.text_area :short_description  -%>
  </div>
   <div class='field'>
    <%= f.label :description -%>
    <%= f.text_area :description  -%>
  </div> 
   <div class='field'>
    <%= f.label :working_time -%>
    <%= f.text_area :working_time  -%>
  </div> 
  <div class='field'>
    <%= f.label :subcategory_id -%>
    <%= f.select :subcategory_id, Refinery::Subcategories::Subcategory.all.collect {|p| [" #{p.name} [#{Refinery::Categories::Category.find(p.category_id).name}]", p.id ]} -%>
  </div>
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>
  </div>
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone  -%>
  </div>
  <div class='field'>
    <%= f.label :e_mail -%>
    <%= f.text_field :e_mail  -%>
  </div>
  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/shops/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @shop.logo,
               :toggle_image_display => false %>

  </div>
  <div class='field'>
    <%= f.label :vip_code -%>
    <%= f.text_field :vip_code  -%>

  </div>


  <%= render '/refinery/shops/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.shops.shop'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @shop.url) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
