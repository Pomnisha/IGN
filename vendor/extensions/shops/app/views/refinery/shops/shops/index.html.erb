<% @shops.each do |s| %>
  <div class="categoryes">
    <div class="icon_category">    
      <a href="<%= refinery.shops_shop_url(s.id)%>">
      <% unless s.logo.nil? -%>
        <%= image_fu s.logo, Refinery::Images.user_image_sizes[:small],
                     :class => "brown_border",
                     :class => "current_picked_image" %>
      <% else -%>
        <img class="current_picked_image" src="" alt="" style='display: none' />
      <% end -%>
      </a>
      <span class='no_picked_image_selected nothing_selected' <%= "style='display: none;'" if s.logo.present? %>>
        <%= t('.none_selected') %>
      </span>
    </div>
    <div class="category_text">
      
      <h2><a href="<%= refinery.shops_shop_url(s.id)%>"><%= s.short_description.html_safe %></a></h2>
      <a class="out_link" href="<%= s.url %>"><%= s.url %></a>
      <%= s.description.html_safe %>
      <div class="line"></div>
      Телефон: <%= s.phone %>   e-mail: <%= s.e_mail  %>
    </div>
  </div>
<% end %>
<div id="count_pages">
<%= will_paginate @shops, previous_label: h("<-"), next_label: h("->")  %>
</div>
<div id="slider">
    <div id="array_left"></div>
    <div id="array_right"></div>
    <div id="slide">
      
    </div>
</div>      
