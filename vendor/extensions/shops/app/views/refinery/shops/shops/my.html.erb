<% @shops.each do |s| %>
  <div class="categoryes">
    <div class="icon_category">    
      <a href="<%= refinery.shops_shop_url(s.id)%>">
      <% unless s.logo.nil? -%>
        <%= image_fu s.logo, '155x98' %>
      <% else -%>
        <%= image_tag s.img.thumb('155x98').url if s.img_uid %>
      <% end -%>
      </a>
    </div>
    <div class="category_text">
      
      <h2><a href="<%= refinery.shops_shop_url(s.id)%>"><%= s.short_description.html_safe %></a></h2>
      <a class="out_link" href="<%= s.url %>"><%= s.url %></a>
      <%= truncate s.description.html_safe, :length => 140 %>
      <div class="line"></div>
      Телефон: <%= s.phone %>   e-mail: <%= s.e_mail  %>
    </div>
  </div>
<% end %>
<div id="count_pages">
<%= will_paginate @shops, previous_label: h("<-"), next_label: h("->")  %>
</div>
