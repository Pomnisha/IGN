<div class="onshop_container">      
  <h1><%= Refinery::Categories::Category.find(Refinery::Subcategories::Subcategory.find(@shop.subcategory_id).id).name -%></h1>
  <div class="onshop">
    <a class="shop_url" href="#"><%= @shop.url -%></a>        
    <h2><%= @shop.short_description.html_safe -%></h2>
    <%= @shop.description.html_safe -%>
    <div class="contacts">
      Телефон: <%= @shop.phone.html_safe -%>  <br />
      E-mail: <%= @shop.e_mail  -%><br />
      Режим работы: <%= @shop.working_time.html_safe -%></div>
    <div class="map"></div>
  </div>
</div>
  <div id="slider">
    <div id="array_left"></div>
    <div id="array_right"></div>
    <div id="slide">
      <% b = Refinery::Banners::Banner.where(:banner_type => 7).first %>        
      <%= image_fu b.image, '92x560' unless b.nil? %>
    </div>
  </div>     