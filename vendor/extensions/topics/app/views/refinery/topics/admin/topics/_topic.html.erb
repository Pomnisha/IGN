<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(topic) -%>">
  <span class='title'>
    <%= topic.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.topics_topic_path(topic),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_topics_admin_topic_path(topic),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.topics_admin_topic_path(topic),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => topic.name),
        :method => :delete %>
  </span>
</li>