<% content_for :body_content_title do %>
  <%= @topic.name %>
<% end %>

<section>
  <h1><%= @topic.name %></h1>
  <% @topic.posts.each do |p| %>  
    <p><span style="font-weight:bold;"><%= p.user.username %> :</span> <%= p.body.html_safe %> </p>
  <% end %>
<div>
  
<%= form_for [refinery, :posts, @post] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @post,
              :include_object_name => true %>
  
  <%= f.text_area :body -%>
  <%= f.hidden_field :topic_id , :value => @post.topic_id-%>

  <%= f.submit :value => "Добавить комментарий"  %>

<% end -%>

</div>  
<%= render "refinery/slider2" %>
</section>


