<% content_for :body_content_title do %>
  <%= @topic.name %>
<% end %>

<section>
  <h1><%= @topic.name %></h1>
  <% @topic.posts.each do |p| %>  
    <p><%= p.user.username %> : <%= p.body.html_safe %> </p>
  <% end %>
  
<div ><%= link_to "Комментировать", refinery.new_posts_post_path(:topic => @topic.id) %></div>  

</section>


